<div class="form-header">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row form-header align-middle text-center">
    <div class="columns">
      <h1>Sign Up</h1>
    </div>
  </div>

  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-12 medium-offset-3 medium-6">
      <div class="m-well align-middle">

        <%= f.fields_for :profile, resource.build_profile do |t| %>
          <div class="field">
            <%= t.label :first_name %>
            <% if  @first_name.present? %>
              <%= t.text_field :first_name, value: @first_name, readonly: true, autofocus: true %>
            <% else %>
              <%= t.text_field :first_name, autofocus: true %>
            <% end %>
          </div>

          <div class="field">
            <%= t.label :last_name %>
            <% if @last_name.present? %>
              <%= t.text_field :last_name, value: @last_name, readonly: true, autofocus: true %>
            <% else %>
              <%= t.text_field :last_name, autofocus: true %>
            <% end %>
          </div>

        <% end %>

        <div class="field">
          <%= f.label :email %>
          <% if @email.present? %>
            <%= f.email_field :email, value: @email, readonly: true %>
          <% else %>
            <%= f.email_field :email, autofocus: true %>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <% if @token.present? %>
          <%= hidden_field_tag :invite_token, @token %>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign up", class: 'button primary' %>
        </div>
        <%= render "devise/shared/links" %>


      </div>
    </div>
  </div>

  <% end %>
z</div>
