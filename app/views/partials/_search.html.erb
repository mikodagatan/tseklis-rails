<div class="text-search-div">
  <div class="row text-search-div align-center adopt-height">
    <div class="columns medium-8 text-search text-center">
      <h4>What do you want to look for?</h4>
      <div class="space2"></div>
      <%= form_tag companies_path, method: :get do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil, class: 'button primary' %>
        </p>
      <% end %>
      <div class="space"></div>
    </div>
  </div>
</div>
