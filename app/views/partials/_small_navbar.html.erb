<div class="show-for-small-only" id='responsive-menu2' data-topbar>
    <ul class="vertical menu drilldown white-text" data-drilldown>
      <li class="">
        <%= link_to root_path do %>
          Home
        <% end %>
      </li>
      <% if user_signed_in? %>
        <%= link_to notifications_notification_index_url do %>
          <%= current_user.notifications.where(read: false).count %>
          <%= fa_icon 'envelope-o' %>
        <% end %>
        <% unless current_user.employments.empty? %>
          <li>
            <%# link_to "Companies", companies_url %>
            <a>Companies</a>
            <ul class="menu vertical nested">
              <% if user_signed_in? %>
                <% if @current_user.employed? %>
                  <% @current_user.employments.select(:company_id).distinct.each do |u| %>
                    <li>
                      <%= link_to u.company.name, company_url(u.company) %>
                    </li>
                  <% end %>
                <% end %>
              <% end %>
            </ul>
          </li>
        <% end %>
        <% unless current_user.profile.nil? || current_user.profile.first_name.nil? || current_user.profile.last_name.nil? %>
          <li>
            <a>
              <%= fa_icon "user-circle"%>
              <%= current_user.profile.first_name %>
              <%= current_user.profile.last_name %>
            </a>
            <ul class="menu vertical nested">
              <li><%= link_to "Your Profile", user_url(current_user) %></li>
              <li><%= link_to "Create Company", new_company_url %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, class: 'button primary' %></li>

            </ul>
          </li>
        <% end %>
      <% else %>
        <li>
          <%= link_to "Sign Up", new_user_registration_path, class: 'button success white-text' %>
        </li>
        <li>
          <%= link_to "Sign In", new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
