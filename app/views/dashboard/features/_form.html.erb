<%= form_for [:dashboard, resource], method: :post, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :video %>
    <%= f.file_field :video %>
  </div>
  <div class="field">
    <%= f.label :short_description %>
    <%= f.text_area :short_description %>
  </div>
  <div class="field">
    <%= f.label :long_description %>
    <%= f.text_area :long_description %>
  </div>
  <div class="field">
    <%= f.check_box :active %>
    <%= f.label :active %>
  </div>
  <div class="space"></div>
  <%= f.submit 'Submit', class: "button primary" %>
<% end %>
