<%= simple_form_for [:dashboard, resource], html: {multipart: true} do |f| %>
  <%= f.input :photo_1, required: false %>
    <%= image_tag resource.photo_1.url(:medium) if resource.photo_1_file_name.present? %>
  <%= f.input :photo_2, required: false %>
    <%= image_tag resource.photo_2.url(:medium) if resource.photo_2_file_name.present? %>
  <%= f.input :photo_3, required: false %>
    <%= image_tag resource.photo_3.url(:medium) if resource.photo_3_file_name.present? %>
  <%= f.input :photo_4, required: false %>
    <%= image_tag resource.photo_4.url(:medium) if resource.photo_4_file_name.present? %>
  <%= f.input :call_to_action_background, as: :file, required: false %>
  <%= image_tag resource.call_to_action_background.url(:medium) if resource.call_to_action_background_file_name.present? %>

  <%= f.input :video_1, as: :file, required: false %>
  <%= f.input :video_2, as: :file, required: false %>
  <%= f.input :video_3, as: :file, required: false %>
  <%= f.input :video_4, as: :file,  required: false %>


  <%= f.input :header_message, required: false %>
  <%= f.input :subheader_message, required: false %>
  <%= f.input :endorsement_header, required: false %>
  <%= f.input :endorsement_description, required: false %>
  <%= f.input :testimonial_header, required: false %>
  <%= f.input :testimonial_description, required: false %>
  <%= f.input :features_header, required: false %>
  <%= f.input :features_description, required: false %>
  <%= f.input :owners_header, required: false %>
  <%= f.input :owners_description, required: false %>
  <%= f.input :contact_messages_header, required: false %>
  <%= f.input :contact_messages_description, required: false %>
  <%= f.input :plans_header, required: false %>
  <%= f.input :plans_description, required: false %>

  <%= f.button :submit, class: "button primary" %>
<% end %>
