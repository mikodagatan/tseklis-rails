<div class="row">
  <div class="small-12 medium-offset-3 medium-6">
    
			
		<%= form_for @leave_request, url: url, method: method  do |f| %>

			<%= show_error_message(@employment) %>
			
			<div class="m-well align-middle">
				<div class="field">
					<%= f.label :title %>
					<%= f.text_field :title %>
				</div>

				<div class="field">
					<%= f.label :description %>
					<%= f.text_area :description %>
				</div>				

				<div class="field">
					<%= f.label :start_date %>
					<%= f.date_field :start_date, class: "datepickerstart" %>
				</div>

				<div class="field">
					<%= f.label :end_date %>
					<%= f.date_field :end_date, class: "datepickerend" %>
				</div>

				<div class="field">
					<%= f.label :leave_type_id, "Type of Leave" %>
					<%= f.collection_select(:leave_type_id, Company.all, :id, :name, {prompt: true}, {class: "select-select horizontal-max"}) %>
				</div>

				<div class="space2"></div>

				<%= f.submit 'Update', class: "button primary" %>
			</div>
		<% end %>
	</div>
</div>