<% if @user.leave_requests.present? %>
	<div class="row vertical-padding">
		<div class="columns">
			<h4>Leave Requests</h4>
			<div class="space"></div>
			<div class="row" id="leave_requests">
				<div class="column">
					<table class="table">
						<thead>
							<tr>
									<th>Title</th>
									<th>Leave Type</th>
									<th>Start</th>
									<th>End</th>
									<th>Status</th>
									<th>Reviewer</th>
									<th class="text-center">Amount</th>
									<th colspan="1"></th>
								</tr>
						</thead>
						<tbody>
							<% @leave_requests.each do |leave_request| %>
								<%= render 'leave_requests/leave_request',
											url: user_employment_leave_request_url(@user, leave_request.employment, leave_request),
											leave_request: leave_request,
											employment: leave_request.employment,
											at_company: false,
											method: :patch
								%>
							<% end %>
						</tbody>
					</table>
          <div class="row align-center">
            <div class="column shrink">
              <%= paginate @leave_requests %>
            </div>
          </div>
				</div>
			</div>
		</div>
	</div>
<% end %>
