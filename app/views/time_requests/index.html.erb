<div class="space"></div>

<div class="row">
  <div class="column">
    <div class="row">
      <div class="column">
        <h3>Time Requests <small>Attendance</small></h3>
      </div>
      <div class="column medium-6 text-right">
        <%= link_to 'Create Time Request', new_company_time_request_url(@company), class: 'button button-primary add-button-border' %>
        <%= link_to 'Export to .xlsx', excel_export_company_time_requests_url(@company, year: @year, month: @month, format: 'xlsx'), class: 'button button-primary add-button-border' %>
      </div>
    </div>
    <div class="horizontal-max">
      <%= render 'filter_form' %>
    </div>
    <table class="table horizontal-max" style='min-width: 100%;'>
      <thead>
        <tr>
          <th>Employee</th>
          <th>Title</th>
          <th>In/Out</th>
          <th>Date</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'time_request', collection: @time_requests, as: 'tr' %>
      </tbody>
    </table>
  </div>
</div>
