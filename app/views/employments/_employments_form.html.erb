<div class="row">
  <div class="small-12 medium-offset-3 medium-6">
    <% @current_employment = @current_employments.find_by(company_id: @employment.company_id) if @current_user.employed? %>

			<%= form_for @employment, url: url, method: method  do |f| %>

			<%= show_error_message(@employment) %>

		  	<div class="m-well align-middle">
          <% if method == :post %>
  					<div class="field">
  					<%= f.label :company_id, "Company" %>
  					<%= f.collection_select(:company_id, Company.all, :id, :name, {prompt: true}, {class: "select-select horizontal-max"}) %>
  						<div class="small-font-size">
  							If you can't find your company. You can can create one.
  						</div>
  					</div>
  					<div class="space"></div>
          <% end %>

  					<div class="field">
  						<%= f.label :start_date, "Start Date" %>
  						<%= f.text_field :start_date, class: "datepickerstart" %>
  					</div>

					<% unless @employment.id.nil? %>
						<% if (@current_employment.role_id = @hr_officer.id) && (@current_company_id = @employment.company_id)%>
							<div class="field">
								<%= f.label :end_date, "End Date" %>
								<%= f.text_field :end_date, class: "datepickerstart" %>
                <p class="small-font-size">* Enter if the user has left the company</p>
							</div>
						<% end %>
					<% end %>


					<div class="field">
						<%= f.label :salary %>
						<%= f.text_field :salary %>
					</div>

					<div class="space"></div>
					<% unless @employment.id.nil? %>
						<% if (method = :patch) && (@current_employment.is_hr?) && (current_user != @user) && (@employment.is_hr? == false) %>
							<%= form_for @employment, url: url, method: method do |t| %>
								<%= t.hidden_field :role_id, value: @hr_officer.id %>
								<%= t.submit 'Make HR Officer', class: "button warning margin-none" %>
								<div class="small-font-size">Pressing this will not save your other inputs.</div>
								<div class="space"></div>
							<% end %>

						<% end %>
					<% else%>
						<%= f.hidden_field :role_id, value: @employee.id %>
					<% end %>
          <% if @current_employment.is_hr? %>
            <%= fields_for :leave_reduction do |lr| %>
              <%= lr.label :amount, "Leave Reduction Amount" %>
              <%= lr.text_field :amount %>
              <p class="small-font-size">* Reduces amount of leaves of the user due to leave usage before Tseklis use.</p>
            <% end %>
          <% end %>
					<%= f.submit 'Update', class: "button primary" %>
				</div>
		<% end %>
	</div>
</div>
