<% if @current_employment.is_hr? && @employment.regularized == false %>
  <div class="columns">
    <%= form_for @employment, url: url, method: method do |t| %>
      <%= t.hidden_field :regularized, value: true %>
      <%= t.submit 'Regularize Employee', class: "button success " %>
    <% end %>
  </div>
<% end %>
<% if @current_employment.is_hr? && @employment.regularized == true %>
  <div class="columns">
    <%= form_for @employment, url: url, method: method do |t| %>
      <%= t.hidden_field :regularized, value: false %>
      <%= t.submit 'Make Non-Regular', class: "button alert add-button-border" %>
    <% end %>
  </div>
<% end %>
