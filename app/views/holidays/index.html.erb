<div class="small-nav white-border-bottom">
  <div class="row small-nav">
    <div class="columns small-font-size">
      <%= link_to "Home", root_url, class: 'small-nav-link' %> > <%= link_to @company.name, company_url(@company), class: 'small-nav-link' %>  >  Holidays
    </div>
  </div>
</div>
<div class="show-header">

  <div class="row align-middle show-header">

    <div class="columns">

      <h4><%= @company.name %></h4>
      <h1>Holidays</h1>

    </div>

    <div class="columns small-3 medium-2 ">
      <%= link_to "Create Holiday", new_company_holiday_url, class: "button primary" if hr? %>
    </div>
  </div>
</div>


<div class="row small-up-1 medium-up-3">
	<% @holidays.each do |holiday|  %>
		<%= render 'holiday',
			url: company_holiday_url(
				@company,
				holiday),
			holiday: holiday,
			company: @company
		%>
	<% end %>
</div>
