<%= input.fields_for :company_leave_setting, @company_leave_setting do |company_leave_settings| %>

	<h5>Company Leave Settings</h5> <br />

  <div class="field">
	  <%= company_leave_settings.label :leave_month_expiration %>
	  <%= company_leave_settings.number_field :leave_month_expiration, placeholder: "Leaves expire after a specified # of Months" %>

   </div>

  <div class="field">
	  <%= company_leave_settings.label :leave_month_start %>
	  <%= company_leave_settings.number_field :leave_month_start, placeholder: "# of Months after the Employee's start date" %>
  </div>

  <div class="field">
	  <%= company_leave_settings.check_box :include_weekends %>
	  <%= company_leave_settings.label :include_weekends %>
  </div>

	<div class="field">
	  <%= company_leave_settings.check_box :regularized_employees_only %>
	  <%= company_leave_settings.label :regularized_employees_only, 'Allow leaves to Regularized Employees only' %>
  </div>

