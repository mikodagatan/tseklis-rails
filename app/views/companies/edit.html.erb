
<%= form_for @company, url: company_path(@company.id), method: :patch do |f| %>


<div class="row text-center align-middle form-header">

  <div class="columns">
    <h3>Edit</h3> <br />
    <h2><%= @company.name %></h2>
  </div>

</div>

  <%= show_error_message(@company) %>
  

  <div class="row">
    <div class="small-12 medium-offset-4 medium-4">
      <div class="m-well align-middle">
        

          <div class="field">
            <%= f.label :name, "Company Name" %>
            <%= f.text_field :name %>
          </div>
          <div class="row">
            <div class="columns" style= "padding-right:0.25rem;"">
              <div id="show-address-settings" class="button warning horizontal-max">Show Address Settings </div>
              <div id="hide-address-settings" class="button warning horizontal-max">Hide Address Settings </div>
            </div>
            <div class="columns" style= "padding-left:0.25rem;">
              <div id="show-leave-type-settings" class="button warning horizontal-max">Show Leave Type Settings </div>
              <div id="hide-leave-type-settings" class="button warning horizontal-max">Hide Leave Type Settings </div> <br />
            </div>
          </div>

          <div id="show-company-leave-settings" class="button success horizontal-max">Show Company Leave Settings</div>
          <div id="hide-company-leave-settings" class="button success horizontal-max">Hide Company Leave Settings</div> 

          <div class="space"></div>
      

          <div id="address-edit-form">
            <%= render 'address_fields', input: f %> 
            <br />
          </div>

          <div id="leave-type-edit-form">
            <%= render 'leave_type_fields', input: f %> 
            <br />
          </div>

          <div id="company-leave-settings-edit-form">
            <%= render 'company_leave_settings_fields', input: f %> <br />
          </div>

          <div class="actions">
            <%= f.submit "Update", class: 'button primary' %>
          </div>
        </div>

      </div>
    </div>
  </div>

<% end %>

