<% if @company.employments.present? %>
	<div class="row vertical-padding">
		<div class="columns">
			<h4>Employees</h4>
			<div class="space"></div>
			<div class="row" id="users">
				<div class="columns">
					<table class="table">
						<thead>
							<tr>
								<th>Name</th>
								<th>Start Date</th>
								<th>End Date</th>
								<th>Salary</th>
								<th>Role</th>
								<th colspan="1"></th>
							</tr>
						</thead>
						<tbody>
							<% @company.employments.reverse_order.each do |employment| %>
								<%= render 'users/user',
									employment: employment,
									user: employment.user,
									join_request: false
								%>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
<% end %>
