<% if @company.leave_requests.present? %>
	<div class="row vertical-padding">
				<div class="columns">
				<h4>Leave Requests</h4>
			<div class="space"></div>
			<div class="row">
				<div class="column">
					<table class="table">
						<thead>
							<tr>
								<th>Employee</th>
								<th>Title</th>
								<th>Leave Type</th>
								<th>Start</th>
								<th>End</th>
								<th>Status</th>
								<th>Reviewer</th>
								<th class="text-center">Amount</th>
								<th colspan="1"></th>
								<th colspan="1"></th>
							</tr>
						</thead>
						<tbody id="leave_requests">
              <%= render @leave_requests, at_company: true %>
						</tbody>
					</table>
          <div class="row align-center text-center">
            <div class="column shrink">
							<div id="leave_request_paginator_company">
								<%= paginate @leave_requests, remote: true %>
							</div>
							<div class="small-font-size" id="leave_request_info">
								<%= page_entries_info @leave_requests %>
							</div>
						</div>
          </div>
				</div>
			</div>
		</div>
	</div>

<% end %>
