<% if @company.leave_requests.present? %>	
	<h4>Leave Requests</h4>
	<div class="space"></div>

	<div class="row" id="leave_requests">
		<div class="column">
			<table class="table">
				<thead>
					<tr>
						<th>Employee</th>
						<th>Title</th>
						<th>Leave Type</th>
						<th>Start</th>
						<th>End</th>
						<th>Status</th>
						<th>Reviewer</th>
						<th colspan="1"></th>
						<th colspan="1"></th>
					</tr>
				</thead>
				<tbody>
					<!--
						Below code will look for a partial: views/employments/_employment.html.erb
					-->
					<%# render @employments %>
					<% @leave_requests.reverse_order.each do |leave_request| %>
						<%= render 'leave_requests/leave_request',
									url: user_employment_leave_request_url(leave_request.employment.user, leave_request.employment, leave_request),
									leave_request: leave_request,
									employment: leave_request.employment,
									at_company: true,
									method: :patch
						%>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>

	<div class="space2"></div>
<% end %>